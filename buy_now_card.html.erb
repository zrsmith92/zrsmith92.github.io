attrs3 = (1..o).map {|k| "Style #{k}" }

bvs = {
  "twitter:maxage" => "300",
  "twitter:card" => "174717117:buy_now",
  "twitter:marketplace:id" => "578314987389884312",
  "twitter:marketplace:name" => "Market Palace",
  "twitter:marketplace:merchant:id" => "595306934699368450",
  "twitter:marketplace:merchant:name" => "Mer Chant",
